<div class="container d-flex justify-content-center mt-4">
  <div class="allergi">
    <br>
    <div class="perfil">
      <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, transformation: [{width: 150, height: 150, gravity: "face", radius: "max", crop: "fill", quality: 80}, {width: 150, crop: "scale"}]%>
      <% end %>
    </div>
    <br>
    <br>
    <h3>Hello, <%= current_user.name %></h3>

    <div class="card-login">
    
      <form>
        <div id="botao">
          <%= link_to 'Search medicine', medicines_search_medicine_path, class: "btn btn-secondary btn-block" %>
          <br>
          <p class="p-userpage">Remember to see your doctor!</p>
        </div>
      </form>
    </div>
  </div>
</div>