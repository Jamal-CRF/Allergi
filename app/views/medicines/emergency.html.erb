<div class="container-1">
  <div class="container-2 pt-5">  
    <% if @medicine.photo.attached? %>
      <%= cl_image_tag @medicine.photo.key %>
    <% end %>
    <h2> <%= @medicine.name %></h2><br>
    <h2>Active Principle:<br>
      <%= @medicine.principle %>
      <br>Possible Reactions:<br>
      <ul>
        <% @reactions.each do |reaction| %>
          <li>
            <%= reaction.name %>
          </li>
        <% end %>
      </ul>
    </h2>
  </div>
  <div class="container-3">
    <%= image_tag ("alerta.png"), :class => "img_alert"%>
  </div>

  </div>
  <div class="buttons"> 
    <%= link_to "Emergency 192", "tel:192", class: "btn btn-outline-light btn-lg" %>
    <% if @appointment.present? %>
      <%= link_to "Doctor Emergency Phone", "tel:#{@appointment.doctor.emergency_phone}", class: "btn btn-outline-light btn-lg" %>
    <% end %>
  </div>