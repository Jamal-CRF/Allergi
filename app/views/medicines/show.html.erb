<div class="container-medicines d-flex justify-content-center mt-5">
  <div class="card-princip show-medicine">
  <br>
      <h2><%= @medicine.principle %> </h2>
    <div class="card-medicines">
      <% if @medicine.photo.attached? %>
        <%= cl_image_tag @medicine.photo.key %>
      <% end %>
      <div class="card-body">
      <h3><%= @medicine.name %></h3><h4>(<%= @medicine.laboratory %>)</h4>
        <% if @reactions.empty? %> 
          <p>Você não tem alergia a este remédio!</p>
        <% else %>
          <p><strong>Você tem alergia a este remédio!</strong></p>
          <p>Podem ocorrer as seguintes reações:</p>
          <ul>
            <% @reactions.each do |reaction| %>
              <li>
                <%= reaction.name %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center mt-4">
  <%# <%= form_tag medicines_path, method: :post do %>
  <%# <% end %>
  <%= link_to "Add medicine to allergies",  medicine_allergies_path(@medicine), class: "btn btn-warning mx-02", method: :post %>

  <%= link_to 'I Took the medicine!', emergency_path(@medicine), class: "btn btn-danger mx-02 " %>
</div>
