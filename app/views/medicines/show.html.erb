<div class="container-medicines d-flex justify-content-center mt-2">
  <div class="card-princip">
  <br>
      <h2><%= @medicine.principle %> </h2>
    <div class="card-medicines" style="width: 19rem;">
      <% if @medicine.photo.attached? %>
        <%= cl_image_tag @medicine.photo.key %>
      <% end %>
      <div class="card-body">
      <h4 class="card-text"><%= @medicine.name %></h4>
      <br>
      <h6><%= @medicine.laboratory %></h6>
      <% if current_user.allergies %>
        <% medicines = [] %>
        <% current_user.allergies.each do | allergy | %>
          <% medicines.push(allergy.medicine_id) %>
        <% end %>
        <% if medicines.include?(params[:id].to_i) %> 
         <p><strong>Você tem alergia a este remédio!</strong></p>
         <p>Podem ocorrer as seguintes reações:</p>
         <ul>
          <% @reactions.each do |reaction| %>
            <li>
              <%= reaction.name %>
            </li>
          <% end %>
         </ul>
         <% else %>
           <p>Você não tem alergia a este remédio!</p>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-center mt-4">
  <%# <%= form_tag medicines_path, method: :post do %>
  <%# <% end %>
  <%= link_to "Add medicine to allergies",  medicine_allergies_path(@medicine), class: "btn btn-warning mx-02", method: :post %>

  <%= link_to 'I Took the medicine!', medicines_emergency_path({medicine_name: @medicine.name, medicine_principle: @medicine.principle}), class: "btn btn-danger mx-02" %>
</div>

